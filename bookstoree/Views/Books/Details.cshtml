@{
    ViewData["Title"] = "Chi tiết sách";
    Layout = "_Layout";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6" style="display: flex ; justify-content: flex-end;">
                <h1>Thông tin chi tiết sản phẩm</h1>
            </div>
            <div class="col-sm-6" style="display: flex ; justify-content: flex-end;">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin sản phẩm</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <dl class="row">
                                    <dt class="col-sm-4">
                                        @Html.DisplayName("ISBN")
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Model.ISBN
                                    </dd>
                                    <dt class="col-sm-4">
                                        @Html.DisplayName("Title")
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Model.Title
                                    </dd>
                                    <dt class="col-sm-4">
                                        @Html.DisplayName("Author")
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Model.Author
                                    </dd>
                                    <dt class="col-sm-4">
                                        @Html.DisplayName("Publisher")
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Model.Publisher
                                    </dd>
                                    <dt class="col-sm-4">
                                        @Html.DisplayName("Price")
                                    </dt>
                                    <dd class="col-sm-8">
                                        @string.Format("{0:N0} VNĐ", Model.Price)
                                    </dd>
                                    <dt class="col-sm-4">
                                        @Html.DisplayName("StockQuantity")
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Model.StockQuantity
                                    </dd>
                                    <dt class="col-sm-4">
                                        @Html.DisplayName("Category")
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Model.Category.CategoryName
                                    </dd>
                                    <dt class="col-sm-4">
                                        @Html.DisplayName("Description")
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Model.Description
                                    </dd>
                                    <dt class="col-sm-4">
                                        @Html.DisplayName("DateAdded")
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Model.DateAdded
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-md-4 text-center">
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img src="@Model.ImageUrl" alt="Book Image" class="img-fluid" style="max-height: 300px;" />
                                }
                                else
                                {
                                    <p>Không có hình ảnh</p>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Edit" asp-route-id="@Model?.BookId" class="btn btn-info">Sửa</a>
                        <button type="button" onclick="history.back()" class="btn btn-secondary">Quay lại</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
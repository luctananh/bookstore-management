@model bookstoree.Models.Order

@{
    ViewData["Title"] = "Hoàn đơn";
    Layout = "_Layout";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6" style="display: flex ; justify-content: flex-end;">
                <h1>Hoàn đơn</h1>
            </div>
            <div class="col-sm-6" style="display: flex ; justify-content: flex-end;">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Xóa</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">Xác nhận hoàn đơn</h3>
                    </div>
                    <div class="card-body">
                        <p class="text-danger">Bạn có chắc chắn muốn hoàn đơn này không? Thao tác này sẽ hoàn trả số lượng sách vào kho.</p>
                        <h4>Đơn hàng</h4>
                        <hr />
                        <dl class="row">
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.OrderDate)
                            </dt>
                            <dd class = "col-sm-10">
                                @Model.OrderDate
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.Status)
                            </dt>
                            <dd class = "col-sm-10">
                                @Model.Status
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.ShippingAddress)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.ShippingAddress)
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.PaymentMethod)
                            </dt>
                            <dd class = "col-sm-10">
                                @Model.PaymentMethod
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.TotalAmount)
                            </dt>
                            <dd class = "col-sm-10">
                                @string.Format("{0:N0} VNĐ", Model.TotalAmount)
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.User)
                            </dt>
                            <dd class = "col-sm-10">
                                @(Model.User != null ? Model.User.UserId.ToString() : "None")
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.DiscountCode)
                            </dt>
                            <dd class = "col-sm-10">
                                @(Model.DiscountCode != null ? Model.DiscountCode.DiscountCodeId : "None")
                            </dd>
                        </dl>

                        <hr />
                        <!-- <h4>Order Items</h4> -->
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Tên sách</th>
                                    <th>Số lượng</th>
                                    <th>Tổng tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.OrderDetails != null)
                                {
                                    @foreach (var item in Model.OrderDetails)
                                    {
                                        <tr>
                                            <td>@(item.Book != null ? item.Book.Title : "Không có")</td>
                                            <td>@item.Quantity</td>
                                            @* <td>@string.Format("{0:N0} VNĐ", item.UnitPrice)</td> *@
                                            <td>@string.Format("{0:N0} VNĐ", item.Quantity * item.UnitPrice)</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="OrderId" />
                            <input type="submit" value="Hoàn đơn" class="btn btn-warning" /> |
                            <a asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-secondary">Quay lại</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

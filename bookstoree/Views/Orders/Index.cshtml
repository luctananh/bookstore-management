@model IEnumerable<bookstoree.Models.Order>

@{
    ViewData["Title"] = "Đơn hàng";
    Layout = "_Layout";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý Đơn hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Đơn hàng</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Danh sách Đơn hàng</h3>
                        <div class="card-tools">
                            <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Mã đơn hàng</th>
                                    <th>Ngày đặt hàng</th>
                                    <th>Tên sách</th>
                                    <th>Số lượng</th>
                                    <th>Trạng thái</th>
                                    <th>Phương thức thanh toán</th>
                                    <th>Tổng tiền</th>
                                    <th>Người dùng</th>
                                    <th>Mã giảm giá</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.OrderId)</td>
                                        <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                                        <td>
                                            @if (item.OrderDetails != null && item.OrderDetails.Any())
                                            {
                                                @foreach (var detail in item.OrderDetails)
                                                {
                                                    @detail.Book.Title <br/>
                                                }
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.OrderDetails != null && item.OrderDetails.Any())
                                            {
                                                @foreach (var detail in item.OrderDetails)
                                                {
                                                    @detail.Quantity <br/>
                                                }
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PaymentMethod)</td>
                                        <td>@string.Format("{0:N0} VNĐ", item.TotalAmount)</td>
                                        <td>@Html.DisplayFor(modelItem => item.User.UserId)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Discount.DiscountCodeId)</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.OrderId" class="btn btn-sm btn-info">Sửa</a> |
                                            <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-sm btn-secondary">Chi tiết</a> |
                                            <a asp-action="Delete" asp-route-id="@item.OrderId" class="btn btn-sm btn-danger">Xóa</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
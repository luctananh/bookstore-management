@model bookstoree.Models.User

@{
    ViewData["Title"] = "Xóa người dùng";
    Layout = "_Layout";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6" style="display: flex ; justify-content: flex-end;">
                <h1>Xóa người dùng</h1>
            </div>
            <div class="col-sm-6" style="display: flex ; justify-content: flex-end;">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Xóa</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">Bạn có chắc chắn muốn xóa mục này không?</h3>
                    </div>
                    <div class="card-body">
                        <h4>Người dùng</h4>
                        <hr />
                        <dl class="row">
                            <dt class = "col-sm-2">
                                @Html.DisplayName("UserName")
                            </dt>
                            <dd class = "col-sm-10">
                                @Model.UserName
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayName("PasswordHash")
                            </dt>
                            <dd class = "col-sm-10">
                                @Model.PasswordHash
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayName("FullName")
                            </dt>
                            <dd class = "col-sm-10">
                                @Model.FullName
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayName("Email")
                            </dt>
                            <dd class = "col-sm-10">
                                @Model.Email
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayName("PhoneNumber")
                            </dt>
                            <dd class = "col-sm-10">
                                @Model.PhoneNumber
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayName("Role")
                            </dt>
                            <dd class = "col-sm-10">
                                @Model.Role
                            </dd>
                        </dl>
                    </div>
                    <div class="card-footer">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="UserId" />
                            <input type="submit" value="Xóa" class="btn btn-danger" /> |
                            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

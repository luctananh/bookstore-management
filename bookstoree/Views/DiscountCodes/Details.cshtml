@model bookstoree.Models.DiscountCode

@{
    ViewData["Title"] = "Discount Code Details";
    Layout = "_Layout";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6" style="display: flex ; justify-content: flex-end;">
                <h1>Discount Code Details</h1>
            </div>
            <div class="col-sm-6" style="display: flex ; justify-content: flex-end;">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Discount Code Information</h3>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class = "col-sm-4">
                                @Html.DisplayNameFor(model => model.DiscountCodeId)
                            </dt>
                            <dd class = "col-sm-8">
                                @Html.DisplayFor(model => model.DiscountCodeId)
                            </dd>
                            <dt class = "col-sm-4">
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>
                            <dd class = "col-sm-8">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                            <dt class = "col-sm-4">
                                @Html.DisplayNameFor(model => model.DiscountType)
                            </dt>
                            <dd class = "col-sm-8">
                                @Html.DisplayFor(model => model.DiscountType)
                            </dd>
                            <dt class = "col-sm-4">
                                @Html.DisplayNameFor(model => model.Value)
                            </dt>
                            <dd class = "col-sm-8">
                                @if (Model.DiscountType == "Percent")
                                {
                                    @string.Format("{0}%", Model.Value)
                                }
                                else
                                {
                                    @string.Format("{0:N0} VNĐ", Model.Value)
                                }
                            </dd>
                            <dt class = "col-sm-4">
                                @Html.DisplayNameFor(model => model.MinimumOrder)
                            </dt>
                            <dd class = "col-sm-8">
                                @string.Format("{0:N0} VNĐ", Model.MinimumOrder)
                            </dd>
                            <dt class = "col-sm-4">
                                @Html.DisplayNameFor(model => model.StartDate)
                            </dt>
                            <dd class = "col-sm-8">
                                @Html.DisplayFor(model => model.StartDate)
                            </dd>
                            <dt class = "col-sm-4">
                                @Html.DisplayNameFor(model => model.EndDate)
                            </dt>
                            <dd class = "col-sm-8">
                                @Html.DisplayFor(model => model.EndDate)
                            </dd>
                        </dl>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Edit" asp-route-id="@Model?.DiscountCodeId" class="btn btn-info">Sửa</a>
                        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

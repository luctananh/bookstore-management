@model bookstoree.Models.DiscountCode

@{
    ViewData["Title"] = "Xóa mã giảm giá";
}

<h1>Xóa</h1>

<h3>Bạn có chắc chắn muốn xóa mục này không?</h3>
<div>
    <h4>Mã giảm giá</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DiscountType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiscountType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Value)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.DiscountType == "Percent")
            {
                @string.Format("{0}%", Model.Value)
            }
            else
            {
                @string.Format("{0:N0} VNĐ", Model.Value)
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MinimumOrder)
        </dt>
        <dd class = "col-sm-10">
            @string.Format("{0:N0} VNĐ", Model.MinimumOrder)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DiscountCodeId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại</a>
    </form>
</div>

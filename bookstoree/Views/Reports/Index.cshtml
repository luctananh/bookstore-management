@{
    ViewData["Title"] = "Báo cáo Doanh số";
    Layout = "_Layout";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6" style="display: flex ; justify-content: flex-end;">
                <h1>Báo cáo Doanh số</h1>
            </div>
            <div class="col-sm-6" style="display: flex ; justify-content: flex-end;">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Báo cáo</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<div class="card">
    <div class="card-body" style="padding-bottom:0px">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Thống kê cơ bản</h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-6">Tổng số đơn hàng:</dt>
                    <dd class="col-sm-6">@ViewData["TotalOrders"]</dd>
                    <dt class="col-sm-6">Tổng doanh thu:</dt>
                    <dd class="col-sm-6">@string.Format("{0:N0} VNĐ", ViewData["TotalRevenue"])</dd>
                    <dt class="col-sm-6">Tổng số sách đã bán:</dt>
                    <dd class="col-sm-6">@ViewData["TotalBooksSold"]</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="card-body">
        <p>Chọn loại báo cáo bạn muốn xem:</p>
        <div class="list-group">
            <a asp-controller="Reports" asp-action="SalesByCategory" class="list-group-item list-group-item-action">
                <i class="fas fa-chart-bar mr-2"></i> Doanh số theo danh mục
            </a>
            <a asp-controller="Reports" asp-action="SalesByUser" class="list-group-item list-group-item-action">
                <i class="fas fa-users mr-2"></i> Doanh số theo người dùng
            </a>
            <a asp-controller="Reports" asp-action="TopSellingBooks" class="list-group-item list-group-item-action">
                <i class="fas fa-book-open mr-2"></i> Sách bán chạy nhất
            </a>
        </div>
    </div>
</div>


@model IEnumerable<bookstoree.Models.OrderDetail>

@{
    ViewData["Title"] = "Chi tiết Đơn hàng";
    Layout = "_Layout";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6" style="display: flex ; justify-content: flex-end;">
                <h1>Quản lý Chi tiết Đơn hàng</h1>
            </div>
            <div class="col-sm-6" style="display: flex ; justify-content: flex-end;">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Chi tiết Đơn hàng</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Danh sách Chi tiết Đơn hàng</h3>
                        @* <div class="card-tools">
                            <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
                        </div> *@
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Mã đơn hành</th>
                                    @* <th>Đơn hàng</th> *@
                                    <th>Sách</th>
                                    <th>Đơn giá</th>
                                    <th>Số lượng</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.OrderId)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Book.Title)</td>
                                        <td>@string.Format("{0:N0} VNĐ", (item.UnitPrice * item.Quantity))</td>
                                        @* <td>@Html.DisplayFor(modelItem => item.Order.OrderId)</td> *@
                                        <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                                        <td>
                                            @* <a asp-action="Edit" asp-route-id="@item.OrderDetailId" class="btn btn-sm btn-info">Sửa</a> | *@
                                            <a asp-action="Details" asp-route-id="@item.OrderDetailId" class="btn btn-sm btn-secondary">Chi tiết</a> |
                                            <a asp-action="Delete" asp-route-id="@item.OrderDetailId" class="btn btn-sm btn-danger">Xóa</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->